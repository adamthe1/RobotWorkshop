<mujoco model="panda_bar scene">
  <!-- <include file="g1_29dof_with_hand_fixed.xml"/> -->

  <statistic center="0.3 0 0.4" extent="1"/>

  <option timestep="0.005" iterations="5" ls_iterations="8" integrator="implicitfast">
  <flag eulerdamp="disable"/>
</option>

  <!-- <option gravity="0 0 -9.81"/> -->

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="-120" elevation="-20"/>
  </visual>

  <asset>

	  <mesh name="wine_bottle_mesh"
        file="WineBottle.obj"/>
	
	<mesh name="wine_glass_mesh"
        file="wine_glass.obj"/>




    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>

    <material name="bar_mat" rgba="0.8 0.8 0.8 1" texture="marble_tex"
            texuniform="true"
            texrepeat="1 1"
 reflectance="0.2" shininess="0.5" specular="1"/>


  <!-- Red liquid -->
  <material name="liquid_red" rgba="0.6 0.0 0.0 0.9" reflectance="0.2" shininess="0.3" specular="0.4"/>




<material name="glass_mat" rgba="1 0.9 0.9 0.5" reflectance="0.5" shininess="0.9" specular="1"/>

<material name="wine_mat"
          rgba="0.6 0.0 0.0 0.8" 
          reflectance="0.2"
          shininess="0.3"
          specular="0.4"/>


<texture name="marble_tex"
           type="2d"
           file="grey.png"
           width="2000"
           height="1000"/>


<texture name="wood_tex"
           type="2d"
           file="wood3.png"
           width="20"
           height="20"/>

  <!-- 2. Create a material that uses that texture -->
  <material name="wood_floor_mat"
            texture="wood_tex"
            texuniform="true"
            texrepeat="2.5 2.5"
            reflectance="1"
            shininess="0"
            specular="1"/> 




     <model name="mjx_panda" file="mjx_panda.xml"/>
  </asset>


   <worldbody>


<body name="wood_floor" pos="0 0 0">
    <geom type="box" size="200  200  0.01"
          material="wood_floor_mat"
          contype="0" conaffinity="0"/>
  </body>


    <light pos="0 0 1.5" dir="0 0 -1" directional="true" />
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane" />

  
  <!-- 2) Front wall (runs from y = –1 to +1 at x = +1) -->
  <body name="bar_right" pos=" 0.6  0.0  0.4">
    <geom type="box"
          size="0.3  0.9  0.4"
          material="bar_mat"
          contype="1" conaffinity="1"/>
  </body>


  <!-- 4) Back wall (runs from y = –1 to +1 at x = –1) -->
  <body name="bar_left" pos="-1.0  0.0  0.4">
    <geom type="box"
          size="0.1  1.0  0.8"
          material="bar_mat"
          contype="1" conaffinity="1"/>
  </body>










<body name="wine_bottle_body1" pos="0.4 -0.25 0.80">
    <!-- 1) Free joint makes the bottle dynamic (pickable, droppable) -->
    <joint name="wine_bottle_free1" type="free"/>

    <!-- 2) The mesh geom referencing the OBJ you just declared -->
    <geom type="mesh"
          mesh="wine_bottle_mesh"
          material="glass_mat"
          contype="1"
          conaffinity="1"/>

    <geom type="cylinder" pos="0 0 0.085" size="0.03  0.08" material="liquid_red" contype="1" conaffinity="1"/>




  </body>




<body name="Wine_glass" pos="0.4 0.3 0.9" euler="89.55 90 0">
     <joint name="wine_glass_free" type="free"/>


    <!-- 2) The mesh geom referencing the OBJ you just declared -->
    <geom type="mesh"
          mesh="wine_glass_mesh"
          material="glass_mat"
          contype="1"
          conaffinity="1"/>





</body>



 <body name="r1_frame" pos="-0.2 0 0">
        <attach model="mjx_panda" prefix=""/>  
    </body>







  </worldbody>
</mujoco>